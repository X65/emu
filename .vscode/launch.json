  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Launch",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/build/emu",
      "args": ["-z", "roms/multibank.xex"],
      "preLaunchTask": "CMake: build"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Test",
      "cwd": "${workspaceFolder}/build",
      "program": "${workspaceFolder}/build/src/tests/cputest",
      "preLaunchTask": "CMake: build"
    }
  ]
}
